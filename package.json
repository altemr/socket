{
  "name": "askivatan-chat-socket",
  "version": "1.0.0",
  "description": "Socket.IO Chat Server for Askivatan",
  "main": "server.js",
  "scripts": {
    "start": "node chat_socket_server.js",
    "dev": "nodemon server.js",
    "pm2": "pm2 start server.js --name httpdocs-chat-socket",
    "pm2-prod": "pm2 start server.js --name httpdocs-chat-socket --env production",
    "start-chat": "node chat_socket_server.js",
